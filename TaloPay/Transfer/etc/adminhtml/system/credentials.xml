<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="talopay_credentials" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Credenciales</label>
        

        <field id="user_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>User ID</label>
            <validate>required-entry</validate>
            
            <config_path>payment/talopay_transfer/user_id</config_path>
        </field>

        <field id="client_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Client ID</label>

            <validate>required-entry</validate>
          
            <config_path>payment/talopay_transfer/client_id</config_path>
        </field>

        <field id="client_secret" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
            <label>Client Secret</label>

            <validate>required-entry</validate>
           
            <config_path>payment/talopay_transfer/client_secret</config_path>
        </field>
    </group>
</include>
